{
  "name": "onpoint-monorepo",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "esbuild", "electron-winstaller"]
  },
  "scripts": {
    "dev": "pnpm --filter @onpoint/desktop dev",
    "build": "pnpm --filter @onpoint/desktop build",
    "build:mac": "pnpm --filter @onpoint/desktop build:mac",
    "build:win": "pnpm --filter @onpoint/desktop build:win",
    "build:linux": "pnpm --filter @onpoint/desktop build:linux",
    "lint": "eslint --cache .",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3"
  }
}
